#include<bits/stdc++.h>

int main() {
	using namespace std;
	ios_base::sync_with_stdio(false), cin.tie(nullptr);

	int T; cin >> T;
	while (T--) {
		int N; cin >> N;
		const int64_t INF = 1e18;
		int64_t a = INF, b = 0;
		for (int i = 0; i < N; i++) {
			int64_t v; cin >> v;
			int64_t na = min(a, v-b);
			int64_t nb = max(v-a, b);
			assert(na + nb == v);
			a = na, b = nb;
		}
		cout << (a >= 0 ? "YES" : "NO") << '\n';
	}

	return 0;
}

